<%= simple_form_for(@redeemed_coupon, :url => getcoupon_path, :method => :post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :client_name, label: 'Nome' %>
    <%= f.input :client_email, label: 'Email' %>
    <%= f.input :coupon_id, :as => :hidden, :input_html => { :value => @coupon.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar", class:"btn btn-info" %>
  </div>
<% end %>
