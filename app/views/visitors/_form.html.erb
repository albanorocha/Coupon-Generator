<div class="container">
<div class="row center">
 


<%= simple_form_for(@redeemed_coupon, :url => getcoupon_path, :method => :post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :client_name,:placeholder =>"Nome Completo", label: 'Nome' %>
    <%= f.input :client_email,:placeholder =>"waynes@craosx.com", label: 'Email' %>
    <%= f.input :coupon_id, :as => :hidden, :input_html => { :value => @coupon.id } %>
  </div>

  <div class="form-actions">
  	
    <%= f.button :submit, "Enviar", class:"btn btn-lg btn-block btn-info" %>
	<br>
    <div class="row text-center">
    <%= link_to "Todos os Cupons", root_path, class: "btn  btn-default"%>
  </div>
  </div>
<% end %>

</div>
</div>