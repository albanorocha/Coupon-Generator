<div class="container">
<div class="row center">

  <div class="col-sm-12 col-md-12">
    <div class="thumbnail">
      <%= image_tag @coupon.image %>
      <div class="caption">
        <h3><%= @coupon.title %></h3>
        <p><%= @coupon.description%></p>
        <p>
          <strong>Título:</strong>
          <%= @coupon.title %>
        </p>

        <p>
          <strong>Descrição:</strong>
          <%= @coupon.description %>
        </p>

        <p>
          <strong>Válido de:</strong>
          <%= @coupon.valid_from %>
        </p>

        <p>
          <strong>Válido até:</strong>
          <%= @coupon.valid_until %>
        </p>
      </div>

      <div class="text-center">
      <%= link_to "Resgatar", getcoupon_path(coupon_id: @coupon), class: "btn btn-success btn-block btn-lg" %>
      </div>
      <br>
    <div class="text-center">
    <%= link_to 'Todos os Cupons', root_path, class: "btn btn-default" %>
    
    </div>
    </div>

</div>
  </div>
    

</div>