<p id="notice"><%= notice %></p>

<h1>Listing Coupons</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Valid from</th>
      <th>Valid until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.title %></td>
        <td><%= coupon.description %></td>
        <td><%= coupon.valid_from %></td>
        <td><%= coupon.valid_until %></td>
        <td><%= link_to 'Show', [:admin, coupon] %></td>
        <td><%= link_to 'Edit', edit_admin_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', [:admin, coupon], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

