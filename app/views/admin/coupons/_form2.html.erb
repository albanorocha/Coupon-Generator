<%= simple_form_for(@coupon) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :valid_from %>
    <%= f.input :valid_until %>
    <%= f.input :image, as: :image_preview, input_html: {preview_version: :thumb} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
